extends  layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        
        blockquote.text-center Experiencias de Nuestros Clientes 
        include ./layout/block_opiniones

        .row
            .col-md-12
                h2.d-block.w-100.text-center Danos Tu Opinión

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje


            .row.justify-content-center.col
                .col-md-8
                    form(action="/opiniones" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="email") Email
                            input#nombre(type="text", placeholder="Email", name="email", class="form-control", value= email)
                        .form-group
                            label(for="mensaje") Escribe Tu Opinión
                            textarea#mensaje(class="form-control", name="mensaje", rows= 3)= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")